{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "../dist",
		"rootDir": "../src",
		"declaration": false,
		"sourceMap": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": false,
		"allowJs": false
	},
	"include": ["../src/**/*.mts"],
	"exclude": ["../node_modules", "../dist", "../types", "../tests"]
}
