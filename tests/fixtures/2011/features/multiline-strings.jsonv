{
  // SQL queries as multi-line strings
  queries: {
    getUsersWithOrders: '\
      SELECT \
        u.id, \
        u.username, \
        u.email, \
        u.created_at, \
        COUNT(o.id) as order_count, \
        SUM(o.total) as total_spent \
      FROM users u \
      LEFT JOIN orders o ON u.id = o.user_id \
      WHERE u.deleted_at IS NULL \
        AND u.active = true \
        AND o.status = \'completed\' \
      GROUP BY u.id, u.username, u.email, u.created_at \
      HAVING COUNT(o.id) > 0 \
      ORDER BY total_spent DESC \
      LIMIT 100',
    
    getProductInventory: '\
      SELECT \
        p.id, \
        p.sku, \
        p.name, \
        p.category, \
        i.quantity, \
        i.warehouse_location, \
        i.last_updated, \
        COALESCE(r.reserved_quantity, 0) as reserved, \
        (i.quantity - COALESCE(r.reserved_quantity, 0)) as available \
      FROM products p \
      INNER JOIN inventory i ON p.id = i.product_id \
      LEFT JOIN ( \
        SELECT product_id, SUM(quantity) as reserved_quantity \
        FROM reservations \
        WHERE status = \'pending\' \
          AND expires_at > NOW() \
        GROUP BY product_id \
      ) r ON p.id = r.product_id \
      WHERE p.active = true \
      ORDER BY p.category, p.name',
    
    getOrderDetails: '\
      SELECT \
        o.id as order_id, \
        o.order_number, \
        o.status, \
        o.total, \
        o.created_at, \
        u.username, \
        u.email, \
        oi.product_id, \
        oi.quantity, \
        oi.unit_price, \
        oi.subtotal, \
        p.name as product_name, \
        p.sku \
      FROM orders o \
      INNER JOIN users u ON o.user_id = u.id \
      INNER JOIN order_items oi ON o.id = oi.order_id \
      INNER JOIN products p ON oi.product_id = p.id \
      WHERE o.id = $1'
  },
  
